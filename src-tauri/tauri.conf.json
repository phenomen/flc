{
  "build": {
    "beforeDevCommand": "npm run dev:web",
    "beforeBuildCommand": "npm run build:web",
    "devPath": "http://localhost:1420",
    "distDir": "../build",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "FLC",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": false,
        "open": true,
        "scope": [
          {
            "name": "node",
            "cmd": "node",
            "args": true
          }
        ]
      },
      "window": {
        "all": false,
        "maximize": true,
        "setFullscreen": true,
        "setTitle": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://*/*", "https://*/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "RolePlayingGame",
      "copyright": "phenomen#1337",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.phenomen.flc",
      "longDescription": "Foundry Lightweight Client",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Foundry Lightweight Client",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": ["https://flc.ruleplaying.com/flc.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEM0E0Q0VBNDJGMDI2RTEKUldUaEp2QkM2a3c2WFNNTUpNbDJxVjJIZXdXUnh1MmhuOTdTNDM3Tk1DeFEza3JHRHJzVVlIb2QK"
    },
    "windows": [
      {
        "title": "FLC",
        "userAgent": "FLC/2.0 (Foundry Lightweight Client)",
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "fileDropEnabled": false,
        "height": 750,
        "width": 800
      }
    ]
  }
}
