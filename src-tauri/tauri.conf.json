{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build:web",
		"beforeDevCommand": "npm run dev:web",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "FLC",
		"version": "4.3.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"window": {
				"all": false,
				"setFullscreen": true,
				"maximize": true
			},
			"dialog": {
				"all": false,
				"open": true
			},
			"path": {
				"all": true
			},
			"shell": {
				"all": false,
				"execute": true,
				"open": true,
				"scope": [
					{
						"name": "node",
						"cmd": "node",
						"args": true
					}
				]
			},
			"http": {
				"all": false,
				"request": true,
				"scope": ["https://*", "http://*"]
			}
		},
		"bundle": {
			"active": true,
			"category": "RolePlayingGame",
			"copyright": "phenomen",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.phenomen.flc",
			"longDescription": "Foundry Lightweight Client",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "Foundry Lightweight Client",
			"targets": ["msi", "dmg", "updater"],
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": true,
			"endpoints": ["https://flc.ruleplaying.com/flc.json"],
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEM0E0Q0VBNDJGMDI2RTEKUldUaEp2QkM2a3c2WFNNTUpNbDJxVjJIZXdXUnh1MmhuOTdTNDM3Tk1DeFEza3JHRHJzVVlIb2QK"
		},
		"windows": [
			{
				"title": "FLC",
				"userAgent": "FLC",
				"fullscreen": false,
				"resizable": true,
				"center": true,
				"fileDropEnabled": false,
				"height": 650,
				"width": 900
			}
		]
	}
}
