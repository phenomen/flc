{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build:web",
		"beforeDevCommand": "npm run dev:web",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "FLC",
		"version": "4.5.0"
	},
	"plugins": {
		"http": {
			"scope": ["https://*", "http://*"]
		},
		"shell": {
			"open": true,
			"scope": [
				{
					"args": true,
					"cmd": "node",
					"name": "node",
					"sidecar": false
				}
			]
		},
		"updater": {
			"endpoints": ["https://flc.ruleplaying.com/flc.json"]
		}
	},
	"tauri": {
		"bundle": {
			"active": true,
			"category": "RolePlayingGame",
			"copyright": "phenomen",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.phenomen.flc",
			"longDescription": "Foundry Lightweight Client",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "Foundry Lightweight Client",
			"targets": ["msi", "dmg", "updater"],
			"updater": {
				"active": true,
				"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEM0E0Q0VBNDJGMDI2RTEKUldUaEp2QkM2a3c2WFNNTUpNbDJxVjJIZXdXUnh1MmhuOTdTNDM3Tk1DeFEza3JHRHJzVVlIb2QK"
			},
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"center": true,
				"fileDropEnabled": false,
				"fullscreen": false,
				"height": 650,
				"resizable": true,
				"title": "FLC",
				"userAgent": "FLC",
				"width": 900
			}
		]
	}
}
